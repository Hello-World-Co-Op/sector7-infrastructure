{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "ci",
        "build",
        "revert",
        "aurora",
        "learn",
        "tune"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "core",
        "bot",
        "learning",
        "agents",
        "think-tank",
        "security",
        "persona",
        "workflows",
        "models",
        "context"
      ]
    ]
  }
}
